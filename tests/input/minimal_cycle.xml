<?xml version="1.0"?>
<!-- 1 SimpleSource Source, 1 SimpleSink Sink -->

<simulation>
  <control>
    <duration>100</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
  </control>

  <commodity>
    <name>commodityA</name>
  </commodity>

  <commodity>
    <name>commodityB</name>
  </commodity>

  <facility>
    <name>FacilityA</name>
    <spec>
      <lib>agents</lib>
      <agent>KFacility</agent>
    </spec>
    <agent>
      <KFacility>
        <in_commod>commodityB</in_commod>
        <in_capacity>1</in_capacity>
        <k_factor_in>1</k_factor_in>
        <out_commod>commodityA</out_commod>
        <recipe_name>commod_recipe</recipe_name>
        <out_capacity>1</out_capacity>
        <k_factor_out>1</k_factor_out>
      </KFacility>
    </agent>
  </facility>

  <facility>
    <name>FacilityB</name>
    <spec>
      <lib>agents</lib>
      <agent>KFacility</agent>
    </spec>
    <agent>
      <KFacility>
        <in_commod>commodityA</in_commod>
        <in_capacity>1</in_capacity>
        <k_factor_in>1</k_factor_in>
        <out_commod>commodityB</out_commod>
        <recipe_name>commod_recipe</recipe_name>
        <out_capacity>1</out_capacity>
        <k_factor_out>1</k_factor_out>
      </KFacility>
    </agent>
  </facility>

  <region>
    <name>SingleRegion</name>
    <spec>
      <lib>agents</lib>
      <agent>NullRegion</agent>
    </spec>
    <agent>
      <NullRegion/>
    </agent>
    <institution>
      <name>SingleInstitution</name>
      <spec>
        <lib>agents</lib>
        <agent>NullInst</agent>
      </spec>
      <initialfacilitylist>
        <entry>
          <prototype>FacilityA</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>FacilityB</prototype>
          <number>1</number>
        </entry>
      </initialfacilitylist>
      <agent>
        <NullInst/>
      </agent>
    </institution>
  </region>

  <recipe>
    <name>commod_recipe</name>
    <basis>mass</basis>
    <nuclide>
      <id>010010000</id>
      <comp>1</comp>
    </nuclide>
  </recipe>

</simulation>
