<?xml version="1.0"?>
<!-- Lotka-Volterra simulation with Preys and Predators -->

<simulation>
  <control>
    <duration>20</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
  </control>

  <commodity>
    <name>wabbit</name>
  </commodity>

  <facility>
    <name>Prey</name>
    <spec>
      <lib>agents</lib>
      <agent>Prey</agent>
    </spec>
    <agent>
      <Prey>
        <birth_freq>1</birth_freq>
        <nchildren>1</nchildren>
        <birth_and_death>0</birth_and_death>
        <commod>wabbit</commod>
      </Prey>
    </agent>
  </facility>

  <facility>
    <name>Predator</name>
    <spec>
      <lib>agents</lib>
      <agent>Predator</agent>
    </spec>
    <agent>
      <Predator>
        <hunt_cap>2</hunt_cap>
        <hunt_freq>3</hunt_freq>
        <full>2</full>
        <lifespan>6</lifespan>
        <commod>wabbit</commod>
        <success>0.575</success>
        <birth_and_death>0</birth_and_death>
        <prey>Prey</prey>
      </Predator>
    </agent>
  </facility>

  <region>
    <name>SingleRegion</name>
    <spec>
      <lib>agents</lib>
      <agent>NullRegion</agent>
    </spec>
    <agent>
      <NullRegion/>
    </agent>
    <institution>
      <name>SingleInstitution</name>
      <spec>
        <lib>agents</lib>
        <agent>NullInst</agent>
      </spec>
      <initialfacilitylist>
        <entry>
          <prototype>Prey</prototype>
          <number>95</number>
        </entry>
        <entry>
          <prototype>Predator</prototype>
          <number>20</number>
        </entry>
      </initialfacilitylist>
      <agent>
        <NullInst/>
      </agent>
    </institution>
  </region>

  <!-- cyclus requires a recipe to not core dump...-->
  <recipe>
    <name>commod_recipe</name>
    <basis>mass</basis>
    <nuclide>
      <id>010010000</id>
      <comp>1</comp>
    </nuclide>
  </recipe>
</simulation>
