<!-- 1 Source, 1 Sink -->

<simulation>
  <control>
    <duration>100</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
  </control>

  <archetypes>
    <spec><lib>agents</lib><archetype>Source</archetype></spec>
    <spec><lib>agents</lib><archetype>Sink</archetype></spec>
    <spec><lib>agents</lib><archetype>NullRegion</archetype></spec>
    <spec><lib>agents</lib><archetype>NullInst</archetype></spec>
  </archetypes>

  <facility>
    <name>Source</name>
    <agent>
      <Source>
        <commod>commodity</commod>
        <recipe_name>commod_recipe</recipe_name>
        <capacity>1.00</capacity>
      </Source>
    </agent>
  </facility>

  <facility>
    <name>Sink</name>
    <agent>
      <Sink>
        <in_commods>
          <val>commodity</val>
        </in_commods>
        <capacity>1.00</capacity>
      </Sink>
    </agent>
  </facility>

  <region>
    <name>SingleRegion</name>
    <agent> <NullRegion/> </agent>
    <institution>
      <name>SingleInstitution</name>
      <initialfacilitylist>
        <entry>
          <prototype>Source</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Sink</prototype>
          <number>1</number>
        </entry>
      </initialfacilitylist>
      <agent> <NullInst/> </agent>
    </institution>
  </region>

  <recipe>
    <name>commod_recipe</name>
    <basis>mass</basis>
    <nuclide>
      <id>010010000</id>
      <comp>1</comp>
    </nuclide>
  </recipe>

</simulation>
